    <style>
      .card {
        text-align: center;
        position: absolute;
        background-color: whitesmoke;
        width: 250px;
        height: 300px;
        left: 50%;
        transform: translateX(-50%);
        margin-top: 2em;
        border-radius: 30px;
      }

      .card p {
        display: inline-block;
        margin-top: 10px;
        font-size: 2em;
      }
    </style>
  </head>
